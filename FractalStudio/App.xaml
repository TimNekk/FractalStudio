<Application x:Class="FractalStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FractalStudio"
             xmlns:viewModel="clr-namespace:FractalStudio.MVVM.ViewModel"
             xmlns:view="clr-namespace:FractalStudio.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                 <ResourceDictionary Source="Theme/ButtonTheme.xaml"/>
                 <ResourceDictionary Source="Theme/GradientFrameTheme.xaml"/>
                 <ResourceDictionary Source="Theme/TransparentButtonTheme.xaml"/>
             </ResourceDictionary.MergedDictionaries>
             
             <DataTemplate DataType="{x:Type viewModel:PythagorasTreeViewModel}">
                 <view:PythagorasTreeView/>
             </DataTemplate>
             
             <DataTemplate DataType="{x:Type viewModel:KochСurveViewModel}">
                 <view:KochСurveView/>
             </DataTemplate>
         </ResourceDictionary>
    </Application.Resources>
</Application>
